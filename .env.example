# Database Configuration
DATABASE_URL="postgresql://user:password@localhost:5432/dbname"

# Google AI API (for Gemini)
GOOGLE_AI_API_KEY="your-api-key-here"

# PartsTech API (optional)
PARTSTECH_API_KEY="your-partstech-api-key"
PARTSTECH_API_SECRET="your-partstech-secret"

# Authentication (Production)
# Leave these empty in production - auth is enabled by default

# ========================================
# V0 PREVIEW MODE (Development Only)
# ========================================
# WARNING: NEVER use these in production!
# These are ONLY for v0.dev design previews

# Disable authentication completely (no login required)
NEXT_PUBLIC_DISABLE_AUTH=false

# Use mock data instead of database queries
NEXT_PUBLIC_MOCK_DATA=false

# When both are true:
# - All routes are publicly accessible
# - All API endpoints return sample data
# - No database connection needed
# - Perfect for v0.dev to preview designs

# Example v0 preview configuration:
# NEXT_PUBLIC_DISABLE_AUTH=true
# NEXT_PUBLIC_MOCK_DATA=true
